<% publish_to "/comments/new" do %>
<% if current_user.admin %>
$("#chat").append("<%= j render(@comment) %>");
<% else %>
$("#chat").append("<%= j render("hi") %>");
<% end %>
var myDiv = document.getElementById("chat");
myDiv.scrollTop = myDiv.scrollHeight;
<% end %>
$("#new_comment")[0].reset();


